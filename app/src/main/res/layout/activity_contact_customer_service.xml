<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <include layout="@layout/header_contact_customer_service" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:text="常见问题"
        android:textColor="@color/text_color_black"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="302"
        android:background="@color/white"
        android:divider="@color/white"
        android:dividerHeight="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8F8"
        android:padding="@dimen/dp_15"
        android:text="其他问题"
        android:textColor="@color/text_color_black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/questionEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_weight="160"
        android:background="@drawable/shape_edit_corner_white_bg"
        android:gravity="left|top"
        android:hint="请描述您遇到的问题，客服将在24小时内回复您"
        android:padding="@dimen/dp_10"
        android:textColor="@color/text_color_black"
        android:textColorHint="#BBBBBB"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_edit_corner_white_bg"
            android:hint="请留下您的联系方式"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/text_color_black"
            android:textColorHint="#BBBBBB"
            android:textSize="13sp" />
        
        <TextView
            android:id="@+id/tijiaoButton"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:text="提交"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            android:background="@mipmap/tijiao_yellow"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60" />

    <TextView
        android:id="@+id/callServiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_15"
        android:drawableLeft="@mipmap/call_customer_service"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:text="拨打24小时客服热线"
        android:textColor="@color/text_color_yellow"
        android:textSize="13sp" />

</LinearLayout>