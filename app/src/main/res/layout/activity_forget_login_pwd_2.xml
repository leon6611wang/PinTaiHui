<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_left_center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_25"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/suo"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="bottom"
            />
        <EditText
            android:id="@+id/pwdEdit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:hint="请输入密码(6-14位)"
            android:inputType="text"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_gray"
            />

        <ImageView
            android:id="@+id/pwdShowImageView"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_gravity="center"
            android:src="@mipmap/pwd_see" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/goToHomeTextView"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="保存去登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/shape_get_vertifycode"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        />

</LinearLayout>