<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="95.5dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="95.5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_circle_member_manage_menu_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu1Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu1TextView"
                android:layout_width="wrap_content"
                android:layout_height="49.5dp"
                android:text="添加好友"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu2Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu2TextView"
                android:layout_width="wrap_content"
                android:layout_height="49.5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请出圈聊"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu3Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu3TextView"
                android:layout_width="wrap_content"
                android:layout_height="49.5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="撤销管理"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/triangle_down_grey" />

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>