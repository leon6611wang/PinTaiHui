<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 圈子-->
            <android.support.v7.widget.CardView
                android:id="@+id/circleCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white"
                android:elevation="@dimen/dp_1"
                cube_ptr:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="互联网"
                            android:textColor="@color/text_color_yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-相关圈子"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/moreCircleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@mipmap/arrow_right_gray_small"
                            android:text="更多圈子"
                            android:textColor="@color/text_color_grey"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <com.zhiyu.quanzhu.ui.widget.HorizontalListView
                        android:id="@+id/circleListView"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:layout_marginTop="@dimen/dp_10"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 名片-->
            <android.support.v7.widget.CardView
                android:id="@+id/cardCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/white"
                android:elevation="@dimen/dp_1"
                cube_ptr:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="互联网"
                            android:textColor="@color/text_color_yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-相关名片"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/moreCardTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@mipmap/arrow_right_gray_small"
                            android:text="更多名片"
                            android:textColor="@color/text_color_grey"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <com.zhiyu.quanzhu.ui.widget.MyListView
                        android:id="@+id/cardListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        android:dividerHeight="0dp"
                        android:scrollbars="none" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 文章-->
            <android.support.v7.widget.CardView
                android:id="@+id/articleCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/white"
                android:elevation="@dimen/dp_1"
                cube_ptr:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="互联网"
                            android:textColor="@color/text_color_yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-相关文章"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <com.zhiyu.quanzhu.ui.widget.MyListView
                        android:id="@+id/articleListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        android:dividerHeight="0dp"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/moreArticleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@mipmap/arrow_right_gray_small"
                        android:gravity="center"
                        android:text="更多相关文章"
                        android:textColor="@color/text_color_grey"
                        android:textSize="15sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 动态-->
            <android.support.v7.widget.CardView
                android:id="@+id/feedCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/white"
                android:elevation="@dimen/dp_1"
                cube_ptr:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="互联网"
                            android:textColor="@color/text_color_yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-相关动态"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <com.zhiyu.quanzhu.ui.widget.MyListView
                        android:id="@+id/feedListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/text_color_yellow"
                        android:divider="@color/white"
                        android:dividerHeight="0dp"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/moreFeedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@mipmap/arrow_right_gray_small"
                        android:gravity="center"
                        android:text="更多相关动态"
                        android:textColor="@color/text_color_grey"
                        android:textSize="15sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 视频-->
            <android.support.v7.widget.CardView
                android:id="@+id/videoCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/white"
                android:elevation="@dimen/dp_1"
                cube_ptr:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="互联网"
                            android:textColor="@color/text_color_yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-相关视频"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <com.zhiyu.quanzhu.ui.widget.MyListView
                        android:id="@+id/videoListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        android:dividerHeight="0dp"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/moreVideoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@mipmap/arrow_right_gray_small"
                        android:gravity="center"
                        android:text="更多相关视频"
                        android:textColor="@color/text_color_grey"
                        android:textSize="15sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 店铺-->
            <android.support.v7.widget.CardView
                android:id="@+id/shopCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/white"
                android:elevation="@dimen/dp_1"
                cube_ptr:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="互联网"
                            android:textColor="@color/text_color_yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-相关店铺"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <com.zhiyu.quanzhu.ui.widget.MyListView
                        android:id="@+id/shopListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        android:dividerHeight="0dp"
                        android:scrollbars="none" />

                    <TextView
                        android:id="@+id/moreShopTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@mipmap/arrow_right_gray_small"
                        android:gravity="center"
                        android:text="更多相关店铺"
                        android:textColor="@color/text_color_grey"
                        android:textSize="15sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 商品-->
            <android.support.v7.widget.CardView
                android:id="@+id/goodsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/white"
                android:elevation="@dimen/dp_1"
                cube_ptr:cardElevation="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="互联网"
                            android:textColor="@color/text_color_yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-相关商品"
                            android:textColor="@color/text_color_black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <com.zhiyu.quanzhu.ui.widget.MyGridView
                        android:id="@+id/goodsGridView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:divider="@color/white"
                        android:dividerHeight="0dp"
                        android:horizontalSpacing="15dip"
                        android:numColumns="2"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="15dip" />

                    <TextView
                        android:id="@+id/moreGoodsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableRight="@mipmap/arrow_right_gray_small"
                        android:gravity="center"
                        android:text="更多相关商品"
                        android:textColor="@color/text_color_grey"
                        android:textSize="15sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>