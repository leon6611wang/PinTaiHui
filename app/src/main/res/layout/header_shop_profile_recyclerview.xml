<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/shop_profile_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/header_shop_profile"
            android:visibility="invisible" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:elevation="@dimen/dp_5"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <com.zhiyu.quanzhu.ui.widget.CircleImageView
                        android:id="@+id/shopIconImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/image_error"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="12.5dp"
                        android:layout_marginRight="12.5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/shopNameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="商店名称"
                            android:textSize="15sp"
                            android:textColor="@color/text_color_black"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />

                        <TextView
                            android:id="@+id/daysTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="入驻：1天"
                            android:textColor="@color/text_color_grey"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/followLayout"
                        android:layout_width="53dp"
                        android:layout_height="21dp"
                        android:orientation="horizontal"
                        android:background="@drawable/shape_oval_bg_yellow"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/followImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/guanzhu_yellow"
                            android:visibility="gone"
                            android:layout_marginRight="2dp"
                            />

                        <TextView
                            android:id="@+id/followTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textSize="12sp"
                            android:textColor="@color/text_color_yellow"
                            />

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EDEDED"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="38.5"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/goodsCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品数量 0"
                        android:textSize="13sp"
                        android:textColor="@color/text_color_grey"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/followCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="圈粉数 0"
                        android:textSize="13sp"
                        android:textColor="@color/text_color_grey"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/saleNumTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="销量 0"
                        android:textSize="13sp"
                        android:textColor="@color/text_color_grey"
                        />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:elevation="@dimen/dp_5"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好评率 "
                        android:textColor="@color/text_color_grey"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/goodAppraiseTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99%"
                        android:textColor="@color/text_color_grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品质量"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/goodsMarkProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:progressDrawable="@drawable/shape_shop_profile_progressbar"
                        android:max="50"
                        android:progress="0"
                        />

                    <TextView
                        android:id="@+id/goodsMarkTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务态度"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/serviceMarkProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:max="50"
                        android:progress="0"
                        android:layout_weight="1"
                        android:progressDrawable="@drawable/shape_shop_profile_progressbar" />

                    <TextView
                        android:id="@+id/serviceMarkTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物流速度"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/deliveryMarkProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:max="50"
                        android:progress="0"
                        android:layout_weight="1"
                        android:progressDrawable="@drawable/shape_shop_profile_progressbar" />

                    <TextView
                        android:id="@+id/deliveryMarkTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="证件信息"
            android:textColor="@color/text_color_grey"
            android:textSize="15sp" />

    </LinearLayout>

</FrameLayout>