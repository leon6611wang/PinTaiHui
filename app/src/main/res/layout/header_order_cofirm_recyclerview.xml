<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/location"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="收货信息"
                android:textColor="@color/text_color_black"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/changeAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/arrow_right_yellow"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:text="切换"
                android:textColor="@color/text_color_yellow" />

        </LinearLayout>

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="收货人：Vince Lee"
            android:textColor="@color/text_color_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/phonenumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="电话：18055661234"
            android:textColor="@color/text_color_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地址：江苏省 南京市 栖霞区 仙林大道18号马群科创园3栋6 楼中国智谷"
            android:textColor="@color/text_color_grey"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#F8F8F8" />

</LinearLayout>