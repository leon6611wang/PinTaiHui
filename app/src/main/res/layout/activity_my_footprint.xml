<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_left_center_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fangkelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fangketextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:text="访客"
                android:textColor="@color/text_color_yellow"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/fangkeview"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_gravity="center"
                android:background="@color/text_color_yellow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pinglunlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pingluntextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/pinglunview"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_gravity="center"
                android:background="@color/text_color_yellow"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dianzanlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dianzantextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:text="点赞"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/dianzanview"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_gravity="center"
                android:background="@color/text_color_yellow"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lishilayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lishitextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:text="历史"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/lishiview"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_3"
                android:layout_gravity="center"
                android:background="@color/text_color_yellow"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>