<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/indicator1"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_10"
            android:background="@drawable/shape_oval_solid_bg_yellow" />

        <View
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_1" />

        <View
            android:id="@+id/indicator2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_yuandian_ededed" />

        <View
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_1" />

        <View
            android:id="@+id/indicator3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_yuandian_ededed" />

        <View
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_1" />

        <View
            android:id="@+id/indicator4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_yuandian_ededed" />

    </LinearLayout>

    <TextView
        android:id="@+id/okTextView"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="27.5dp"
        android:background="@drawable/shape_oval_solid_bg_yellow"
        android:gravity="center"
        android:text="立即体验"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tiaoguoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/tiaoguo" />

    </LinearLayout>

</FrameLayout>