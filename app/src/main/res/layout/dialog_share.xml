<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_topleft_topright_corners_bg"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/innerShareLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享到内部:"
        android:textSize="12sp"
        android:textColor="@color/text_color_black"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_25"
        />

    <TextView
        android:id="@+id/shareInnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/share_quanyou"
        android:text="圈聊圈友"
        android:textSize="12sp"
        android:textColor="#666666"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EDEDED"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_25"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多分享方式:"
        android:textSize="12sp"
        android:textColor="@color/text_color_black"
        android:layout_marginLeft="@dimen/dp_15"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/sharePengYouQuanView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_pengyouquan"
            android:text="朋友圈"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/shareWeiXinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_weixin"
            android:text="微信圈友"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/shareQQView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_qq"
            android:text="QQ圈友"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/copyLinkView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_copy_link"
            android:text="复制链接"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EDEDED"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/cancelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="16sp"
        android:textColor="@color/text_color_black"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_gravity="center"
        android:gravity="center"
        />
</LinearLayout>