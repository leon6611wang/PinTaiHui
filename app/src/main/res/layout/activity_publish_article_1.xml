<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_left_center_black" />
    <!-- 标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="标题"
            android:textColor="@color/text_color_grey"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|right"
            android:hint="请输入文章标题"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_grey"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#E5E5E5" />
    <!--添加标签 -->
    <LinearLayout
        android:id="@+id/addTagLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="添加标签"
            android:textColor="@color/text_color_grey"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1" />

        <TextView
            android:id="@+id/addTagTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@mipmap/arrow_right_gray_small"
            android:gravity="center|right"
            android:hint="点击添加"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_grey"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#E5E5E5" />
    <!-- 正文-->
    <LinearLayout
        android:id="@+id/editContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="正文"
            android:textColor="@color/text_color_grey"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_5"
            android:drawableRight="@mipmap/arrow_right_gray_small"
            android:gravity="center|right"
            android:hint="点击编辑"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_grey"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#E5E5E5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_15"
        android:background="@mipmap/create_shangquan_btn_bg"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>