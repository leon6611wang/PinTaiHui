<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:elevation="@dimen/dp_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/shape_yuandian_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请圈友"
                    android:textColor="#3E3E49"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-04-18 22:37"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#EDEDED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请添加"
                    android:textColor="@color/text_color_grey"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textSize="13sp" />

                <com.zhiyu.quanzhu.ui.widget.CircleImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/image_error" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VinceLee"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="13sp" />



                <TextView
                    android:id="@+id/statusDescTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂未通过"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_red_2"
                    android:layout_marginLeft="@dimen/dp_15"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="验证消息：我非常喜欢贵公司的商圈模式，想要加入您们 的团队！"
                android:textColor="#808291"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/leftButtonTextView"
                    android:layout_width="90dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_oval_bg_yellow"
                    android:gravity="center"
                    android:text="拒绝"
                    android:textColor="@color/text_color_yellow"
                    android:visibility="gone"
                    android:textSize="13sp" />

                <View
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/rightButtonTextView"
                    android:layout_width="90dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/gouwuche_jiesuan_lijizhifu"
                    android:gravity="center"
                    android:text="再次申请"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>