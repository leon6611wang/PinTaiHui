<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_left_center_black"/>

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/text_color_gray"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:text="我们已经发送了一条包含验证码数字的短信到您尾号 5566 的手机上，请在下方输入您收到的验证码信息"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/verify_code"
            android:layout_marginRight="12dp"
            />

        <EditText
            android:id="@+id/vertifyCodeEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机验证码"
            android:textColorHint="#BBBBBB"
            android:textSize="15sp"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/text_color_black"
            />

        <TextView
            android:id="@+id/timeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59s"
            android:textSize="15sp"
            android:textColor="@color/text_color_gray"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E5E5E5"
        android:layout_margin="@dimen/dp_15"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <TextView
        android:id="@+id/nextTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/dp_15"
        android:background="@mipmap/verify_code_bg"
        />
</LinearLayout>