<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/text_color_gray"
        android:textSize="13sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/mCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:elevation="@dimen/dp_5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/notificationTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#EDEDED" />

            <LinearLayout
                android:id="@+id/duixianglayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_5"
                >
                <TextView
                    android:id="@+id/duixiangtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投诉对象："
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    />
                <TextView
                    android:id="@+id/targetTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yuanyinlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_5"
                >
                <TextView
                    android:id="@+id/yuanyintextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投诉原因："
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    />
                <TextView
                    android:id="@+id/reasonTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/beizhulayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                >
                <TextView
                    android:id="@+id/beizhutextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原因备注："
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    />
                <TextView
                    android:id="@+id/remarkTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shensuyuanyinlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                >
                <TextView
                    android:id="@+id/shensuyuanyintextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申诉原因："
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    />
                <TextView
                    android:id="@+id/suReasonTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_black"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/chuliTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_color_grey"
                />

            <LinearLayout
                android:id="@+id/shensuLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#EDEDED"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/arrow_right_gray_small"
                    android:text="发起申诉"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>