<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="2018/04/18 11:03"
        android:textColor="@color/text_color_gray"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="68dp"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <com.zhiyu.quanzhu.ui.widget.CircleImageView
            android:id="@+id/avatarImageView"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/image_error" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服小鱼"
                android:textColor="@color/text_color_gray"
                android:textSize="13sp" />

            <FrameLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <!-- 文字-->
                <TextView
                    android:id="@+id/mTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/service_im_left_bg"
                    android:text="亲，欢迎光亲，欢迎光临奥美汽车专营亲，欢迎光临奥美汽车专营亲，欢迎光临奥美汽车专营亲，欢迎光临奥美汽车专营亲，欢迎光临奥美汽车专营亲，欢迎光临奥美汽车专营亲，欢迎光临奥美汽车专营临奥美汽车专营"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <!-- 图片-->
                <RelativeLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/service_im_left_bg"
                    android:visibility="gone">

                    <com.zhiyu.quanzhu.ui.widget.WrapImageView
                        android:id="@+id/mWrapImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_h" />
                </RelativeLayout>
                <!-- 订单-->
                <LinearLayout
                    android:id="@+id/orderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/service_im_left_bg"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单信息确认"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/orderRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购买数量："
                            android:textColor="@color/text_color_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/goodsCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/text_color_black"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_1"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合计："
                            android:textColor="@color/text_color_black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="#F6152A"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/orderPriceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="#F6152A"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/addressNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="收件人：鲁迅"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/addressPhoneTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="电话：18757591055"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/addressAddressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:text="地址：浙江省绍兴市鲁迅故居纪念馆"
                        android:textColor="@color/text_color_grey"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/orderButtonTextView"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@mipmap/bond_button_bg"
                        android:gravity="center"
                        android:text="确认"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
                <!-- 商品-->
                <LinearLayout
                    android:id="@+id/goodsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/service_im_left_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="商品信息"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.zhiyu.quanzhu.ui.widget.NiceImageView
                            android:id="@+id/goodsImageImageView"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/image_error"
                            app:corner_radius="@dimen/dp_2" />

                        <TextView
                            android:id="@+id/goodsNameTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
                            android:textColor="@color/text_color_black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>