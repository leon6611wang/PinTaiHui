<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="right"
    android:orientation="vertical">

    <View
        android:id="@+id/topMarginView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/menu_bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />

        <LinearLayout
            android:id="@+id/sharelayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/mymingpian_menu_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享名片"
                android:textColor="#31333E"
                android:textSize="14sp" />

        </LinearLayout>
        <!-- 编辑-->
        <LinearLayout
            android:id="@+id/editlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/mymingpian_menu_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑名片"
                    android:textColor="#31333E"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 关注-->
        <LinearLayout
            android:id="@+id/followlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/followImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/guanzhu_white" />

                <TextView
                    android:id="@+id/followTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注用户"
                    android:textColor="#31333E"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 收藏-->
        <LinearLayout
            android:id="@+id/collectlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/collectImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/mymingpian_menu_collect_gra" />

                <TextView
                    android:id="@+id/collectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏名片"
                    android:textColor="#31333E"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- 投诉-->
        <LinearLayout
            android:id="@+id/tousulayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/mymingpian_menu_tousu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投诉名片"
                    android:textColor="#31333E"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>