<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="top"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/qiandao_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/headerTitleView"
                layout="@layout/header_qiandao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:text="s每日签到赢豪礼"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/daysTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="本月已签到(天)"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/qiandaoTextView"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_15"
                android:background="@drawable/shape_oval_solid_bg_white"
                android:gravity="center"
                android:text="立即签到"
                android:textColor="#B98C64"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_5"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8"
            android:paddingBottom="15dp"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="20dp"
            android:text="积分任务"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </android.support.v7.widget.CardView>

</LinearLayout>