<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comments_item_menu_height"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/line_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/itemMenuLayout0"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/zhuanfa_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemMenuLayout1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/collect_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemMenuLayout2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/share" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemMenuLayout3"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/delete_black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemMenuLayout4"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:src="@mipmap/report_black" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>